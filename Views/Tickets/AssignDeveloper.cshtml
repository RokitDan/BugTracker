@model BugTracker.Models.ViewModels.AssignDeveloperViewModel

@{
    ViewData["Title"] = "Assign Developer";
}
<h1>Project : @Model.Ticket?.Title</h1>
<h4>Assign Developer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
            <input type="hidden" asp-for="Ticket!.Id" />

            <h2>@Model.Ticket?.Title </h2>

            <p>@Model.Ticket?.Description </p>

            <div class="form-group">
                <label class="control-label">Select Developer</label>
                <select asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                    <option></option>
                </select>
                <span asp-validation-for="DeveloperId" class="text-danger"></span>
            </div>
            <input type="submit" value="Assign" class="btn btn-primary" />
        </form>
    </div>
</div>
<div>
    <a asp-action="UnassignedTickets">See Unassigned Tickets</a>
    <a asp-action="Index">See Current Projects</a>
</div>