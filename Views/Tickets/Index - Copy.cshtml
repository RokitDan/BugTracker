@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Current Tickets</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<section class="body">
    <div class="card-body">
        <table class="table table-responsive-md mb-0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Project)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketPriority)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeveloperUser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubmitterUser)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.Project.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketType.Name)
                        </td>
                        <td>
                            @if (string.IsNullOrEmpty(item.DeveloperUserId))
                            {
                                <a asp-action="AssignDeveloper" asp-route-ticketId="@item.Id">Assign Developer</a>
                            }
                            else
                            {
                                @item.DeveloperUser!.FullName
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubmitterUser.FullName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Archive" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <section class="card">
        <header class="card-header">
            <div class="card-actions">
                <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
            </div>

            <h2 class="card-title">Actions</h2>
        </header>
        <div class="card-body">
            <table class="table table-responsive-md mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Mark</td>
                        <td>Otto</td>

                        <td class="actions">
                            <a href=""><i class="fas fa-pencil-alt"></i></a>
                            <a href="" class="delete-row"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Jacob</td>
                        <td>Thornton</td>

                        <td class="actions">
                            <a href=""><i class="fas fa-pencil-alt"></i></a>
                            <a href="" class="delete-row"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </section>
</section>



